{
  "name": "@bestest/fs",
  "version": "1.0.3",
  "description": "Internal FS implementation for Bestest benchmarking tool.",
  "publishConfig": {
    "access": "public"
  },
  "main": "./index",
  "types": "./index.d.ts",
  "scripts": {
    "clean": "rimraf lib/**/*.{js,d.ts} index.{js,d.ts}",
    "build": "npm run clean && tsc -p ./tsconfig.json",
    "lint": "tslint -p ./tsconfig.json -c ../../tslint.json",
    "ts-check": "tsc -p ./tsconfig.json --noEmit",
    "test": "npm run ts-check && npm run lint",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rangoo94/bestest.git"
  },
  "bugs": {
    "url": "https://github.com/rangoo94/bestest/issues"
  },
  "keywords": [
    "bestest",
    "fs",
    "file",
    "system",
    "volume",
    "filesystem"
  ],
  "author": "Dawid Rusnak <dawid@drcode.pl>",
  "license": "MIT",
  "devDependencies": {
    "@types/memory-fs": "^0.3.2",
    "@types/node": "^12.7.0",
    "rimraf": "^2.6.3",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@bestest/utils": "^1.0.0",
    "memory-fs": "^0.4.1",
    "unionfs": "^4.2.0"
  }
}
